<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.abc.usermanage.datamapper.UserDataMapper">
    <resultMap type="User" id="UserResult">
        <id property="userId" column="UserID" />
        <result property="userName" column="UserName" />
        <result property="userType" column="UserType" />
        <result property="description" column="Description" />
    </resultMap>
    <select id="queryUserList" resultMap="UserResult" parameterType="int">
    SELECT * FROM (SELECT ROW_NUMBER()OVER(ORDER BY u.RegisterTime) AS RowNumber, u.* FROM Tbl_User u) tmp
    WHERE RowNumber BETWEEN #{1} AND #{2}
    </select>
    <select id="getUserCount" parameterType="User" resultType="int">
     SELECT COUNT(*) FROM Tbl_User
     </select>
</mapper>